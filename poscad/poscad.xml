<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">
 
	<name>COM_POSCAD</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>May 2017</creationDate>
	<author>Wellyngton Teixeira dos Santos</author>
	<authorEmail>wellyngton@uft.edu.br</authorEmail>
	<authorUrl>http://sites.uft.edu.br/dte</authorUrl>
	<copyright>Copyright DTE</copyright>
	<license>License Gratuita</license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.11</version>
	<!-- The description is optional and defaults to the name -->
	<description>COM_POSCAD_DESCRIPTION</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
 
	<update> <!-- Runs on update; New since J2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
 
	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>poscad.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>

	<languages folder="site/language">
		<language tag="pt-BR">pt-BR/pt-BR.com_poscad.ini</language>
    </languages>
 
	<administration>
		<!-- Administration Menu Section -->
		<menu link='index.php?option=com_poscad'>COM_POSCAD_MENU</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>poscad.php</filename>
			<filename>controller.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
						<!-- tables files section -->
			<folder>tables</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<!-- controllers files section -->
			<folder>controllers</folder>
		</files>
		 	<languages folder="admin/language">
        		<language tag="pt-BR">pt-BR/pt-BR.com_poscad.ini</language>
                <language tag="pt-BR">pt-BR/pt-BR.com_poscad.sys.ini</language>
	</languages>
	</administration>

</extension>